# Uncomment the next line to define a global platform for your project
source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '10.0'

target 'Squads' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Squads
  pod 'SnapKit'
  pod 'Alamofire'
  pod 'Kingfisher'
  pod "Codextended"
  
  # share libr
  pod 'MonkeyKing'
  # im
  pod 'TXIMSDK_iOS'

  # tips
  pod 'Toast-Swift'
  # placeholder
  pod 'HGPlaceholders'
  
  pod 'RxSwift', :git => 'https://github.com/ReactiveX/RxSwift.git'
  pod 'RxCocoa', :git => 'https://github.com/ReactiveX/RxSwift.git'
  pod 'RxDataSources'
  pod 'ReactorKit'
  pod 'Moya'
  
  # extension
  pod 'NSObject+Rx'
  pod 'RxTheme'
  pod 'ReusableKit'
  pod 'SwiftDate'
  pod 'SwiftyUserDefaults'
  pod 'Disk'
  pod 'DynamicColor', '~> 4.2.0'
  pod 'ETNavBarTransparent', '~> 1.1.3'
  # 侧边栏
  pod 'SideMenu', '~> 6.0'
  # 转场
  pod 'Hero'
  # 消息库
  pod 'MessageKit'
  # 浏览器
  pod 'JXPhotoBrowser', :git => 'https://github.com/JiongXing/PhotoBrowser.git'
end
